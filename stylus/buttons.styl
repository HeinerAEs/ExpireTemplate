.btn
	border 0
	font-weight bold
	outline none
	padding .5em 1.5em
	&--orange
		box-shadow 1px 1px 1px rgba(naranja_obscuro, .5),
				   1px 1px 2px rgba(naranja_obscuro, .5),
				   1px 1px 3px rgba(naranja_obscuro, .5),
				   1px 1px 4px rgba(naranja_obscuro, .5),
				   1px 1px 5px rgba(naranja_obscuro, .5)
		color gris
		background naranja
	&--default
		box-shadow 1px 1px 1px rgba(gris_obscuro, .5),
				   1px 1px 2px rgba(gris_obscuro, .5),
				   1px 1px 3px rgba(gris_obscuro, .5),
				   1px 1px 4px rgba(gris_obscuro, .5),
				   1px 1px 5px rgba(gris_obscuro, .5)
		color negro
		background gris
	&:active
		box-shadow 0px 0px 0px rgba(naranja_obscuro, .5)
