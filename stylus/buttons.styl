.btn
	border 0
	font-weight bold
	outline none
	padding .5em 1.5em
	
	&--orange
		box-shadow 1px 1px 1px rgba(naranja_obscuro, .5),
				   1px 1px 2px rgba(naranja_obscuro, .5),
				   1px 1px 3px rgba(naranja_obscuro, .5),
				   1px 1px 4px rgba(naranja_obscuro, .5),
				   1px 1px 5px rgba(naranja_obscuro, .5)
		color white
		background naranja
		&:hover
			background naranja_obscuro
	
	&--orange_border
		border 1px solid rgba(naranja_obscuro, .5)
		box-shadow 1px 1px 1px rgba(naranja_obscuro, .5),
				   1px 1px 2px rgba(naranja_obscuro, .5),
				   1px 1px 3px rgba(naranja_obscuro, .5)
		color naranja_obscuro
		background white
		&:hover
			color white
			background naranja_obscuro
			
		
	&--orange_dark
		box-shadow 1px 1px 1px rgba(naranja, .5),
				   1px 1px 2px rgba(naranja, .5),
				   1px 1px 3px rgba(naranja, .5),
				   1px 1px 4px rgba(naranja, .5),
				   1px 1px 5px rgba(naranja, .5)
		color white
		background naranja_obscuro
		&:hover
			background naranja
		
	&--default
		box-shadow 1px 1px 1px rgba(white, .5),
				   1px 1px 2px rgba(white, .5),
				   1px 1px 3px rgba(white, .5),
				   1px 1px 4px rgba(white, .5),
				   1px 1px 5px rgba(white, .5)
		color negro
		background gris_claro
		&:hover
			background white
	&:active
		box-shadow 0px 0px 0px rgba(naranja_obscuro, .5)
	
	&--white
		box-shadow 1px 1px 1px rgba(gris_claro, .5),
				   1px 1px 2px rgba(gris_claro, .5),
				   1px 1px 3px rgba(gris_claro, .5),
				   1px 1px 4px rgba(gris_claro, .5),
				   1px 1px 5px rgba(gris_claro, .5)
		color negro_claro
		background white
		&:hover
			background gris_claro
			
