.about
.contact
.parallax
.sidebar
	margin 0 auto
	
.about
.contact
.header
.parallax
.stats
	padding 1em 8.43em	
	

.about
.contact
	&__title
		.h1
			color negro
			font-family 'Raleway', sans-serif
			font-weight 700
			position relative
			text-shadow:  0px 3px 3px rgba(0, 0, 0, 0.25);
			
			span
				border-bottom 2px solid naranja_obscuro
				
		p
			color negro_claro
			font-family 'Open Sans', sans-serif
			font-size 0.8em
			font-weight 400
			padding 1em 0


.about
	&__description
		font-family 'Open Sans', sans-serif
		display flex
		align-items stretch
		&__content
			margin 1em 1em 0 1em
			width 100%
			position relative
			&__item
				color negro
				border-left 1px solid gris_claro
				border-right 1px solid gris_claro
				border-bottom 1px solid gris_claro
				height 100%
				padding 0 1em 1em 1em
				word-spacing .3em
			
				.h5
					padding  .5em 0
					span
						color gris_claro
						font-size 2em
						margin-right .5em
				p
					color negro_claro
					font-size .9em
		
				.btn
					position absolute
					bottom 0
						
				&:first-child
					border 0
					margin-left 0
					padding 0
					p
						color negro_claro
						font-size 1.7em
						font-weight 600
						
			&:last-child
				margin-right 0
			.triangle
				&__left
					border-left 1px solid gris_claro
					border-top 1px solid gris_claro
				&__right
					background gris_claro
		

.contact
	border-bottom 1px solid gris_claro
	&__container
		display flex
		margin-top 2em
	&__description
		display block
		width 30%
		&__item
			color negro_claro
			display flex
			flex-wrap wrap
			align-items center
			margin 1rem
			.fa
				width 30%
				font-size 3rem
			&__data
				width 70%
				text-align left
	&__form
		width 70%
		display flex
		&__name
		&__email
		&__subject
		&__message
			color negro_claro
			border none
			box-shadow: -1px 3px 3px 1px rgba(gris_obscuro,0.75);
			margin-bottom 1rem
			padding 1em
		&__name
			float left
			width 48%
		&__email
			float right
			width 48%
		&__subject
			width 100%
		&__message
			width 100%
			resize none


.container
	width 100%
	max-width 1440px
	

.header
	background background_header
	color white
	display flex
	letter-spacing 0.05em
	padding 1em 8.43em	
	overflow hidden
	&__list
		list-style-type none
		text-align right
		&__item
			display inline-block
			padding 0 1em
			a
				color white
				display block
				line-height 60px
				&.active
					border-bottom 3px solid naranja
				&:hover
					border-bottom 3px solid naranja
			&:first-child
				padding-left 0
			&:last-child
				padding-right 0
	&__logo
		float left
		width 20%
		a
			color white
		&__image
			position relative
			margin 0
			figcaption
				font-size 1.5em
				position absolute
				left 3em
				bottom 0
				top 0.6em
	&__navigation
		float right
		width 80%
		&__dropdown
			display none
			.dropdown__select
				border  0 !important  
				-webkit-appearance  none  
				-moz-appearance  none 
				background  background_header_suave url('../img/select-arrow.png') no-repeat 90% center
				width  100% 
				text-indent  0.01px /* Removes default arrow from firefox*/
				text-overflow  ""  /*Removes default arrow from firefox*/ /*My custom style for fonts*/
				color  #FFF
				border-radius  15px
				padding  5px
				box-shadow  inset 0 0 5px rgba(000,000,000, 0.5)
				.active
					background naranja


.latest-blog
	background white !important
	font-family 'Open Sans', sans-serif
	&__header
		color negro_claro !important
		margin-bottom 1rem
		p
			color negro_claro !important
	&__center
		display flex
		justify-content space-around
		padding 0 1.5rem
		p
			margin 0 !important
		&__item
			margin-right 1rem
			padding-bottom 3rem
			position relative
			text-align center
			hr
				margin .8rem
				opacity 0.5
				&:hover
					opacity 0.5
					
			&:last-child
				margin-right 0
			.btn
				position absolute
				left 1em
				bottom 0
			.description
			.info
			.h5
				padding 0 1.5em
			.description
				color negro_claro
				font-size .9rem
				line-height 1.5rem
				margin 1rem 0 !important
				text-align left
			.image
				background negro_claro
				height 240px
				margin 1em auto
				width 100%
			.info
				display flex
				font-size .8rem
				text-align left
				.author
				.comments
				.date
					.fa
						color naranja_claro
						margin-right .5rem !important
					
				.author
					width 40%
				.comments
					width 20%
				.date
					width 40%
			.h5
				color negro_claro
				font-weight 600
				&:hover
					color naranja
	&__container
		background white !important
		height auto !important
		&__center
			display flex


.latest-blog
.parallax
.portfolio
	width 100%
	text-align center
	&__header
		color white
		.h1
			font-family 'Raleway', sans-serif
			margin 2rem 0
			position relative
			text-shadow:  0px 3px 3px rgba(0, 0, 0, 0.25);
			&:before
				border 1px solid white
				content ""
				margin-bottom -1rem
				position absolute
				left 45%
				bottom 0
				right 45%
				text-align center
				width 10%
		p
			color gris_claro
			font-family 'Open Sans', sans-serif
			font-size .8rem
	&__quotes
		font-family 'Open Sans', sans-serif
		margin 3em 0
		text-align left
		&__author
			&:before
				content " - "
		&__description
			.fa
				color white
				font-size 3rem
				opacity .5
		&__author
		&__description
			margin 1em
			color gris_claro
			font-size 1.5rem


.maps
	&__frame
		border none
		height 400px
		width 100%


.parallax
	background-attachment fixed
	background naranja_claro
	background-position center center
	background-repeat no-repeat
	background-size cover

.portfolio
	text-align center
	border-top 1px solid gris_claro
	border-bottom 1px solid gris_claro
	&__header
		.h1
			color negro
			&:before
				border 1px solid rojo
	&__items
		display flex
		align-items stretch
		justify-content center
		flex-wrap wrap
		padding 0
	&__item
		margin-top -4px
		width 25%
		&__figure
			margin 0
			padding 0
			position relative
			&__hover
				background rgba(gris_claro, 0.8)
				display none
				padding 1em
				position absolute
				bottom 0
				left 0
				right 0
				top 0
				z-index 1
				a
					color negro_claro
					&:hover
						color naranja_obscuro
					.fa
						font-size 2rem
						font-weight 300
						margin .5em
			img
				display block
				width 100%
		&__figure:hover > .portfolio__item__figure__hover
			align-items center			
			display flex
			justify-content center
		
		

.latest-blog
.sidebar
	&__container
		align-items center
		background background_header_sidebar 
		display flex
		height 80vh
		padding 1em 2.5em
	&__center
		width 90%
		p
			margin-top 3em
		&__title
		&__titleDescription
			font-family 'Raleway', sans-serif
			color white
		&__title
			font-size 5em
			font-weight 600
			text-shadow:  0px 3px 3px rgba(0, 0, 0, 0.25);
		&__titleDescription
			font-weight 200
			padding .2em 0
	&__left
	&__right
		opacity .5
		width 5%
		a
			color background_header_sidebar_claro
			

.stats
	background background_header_sidebar_claro
	color white
	display flex
	font-family 'Raleway', sans-serif
	justify-content space-around
	&__item
		width 25%
		margin 2rem 0
		p
			margin 1rem 0
		p:first-child
			font-size 1.5rem
			font-weight 500
			span
				font-size 3rem
				margin-right .5rem
		p:last-child
			font-size 1.5rem
			font-weight 200
		

	

