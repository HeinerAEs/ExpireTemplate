.about
.sidebar
.sidebar__triangle
	margin 0 auto
	
.about
.header
	padding 1em 8.43em	
	
.about
	&__title
		h1
			font-family 'Raleway', sans-serif
			font-weight 700
		p
			font-family 'Open Sans', sans-serif
			font-weight 400
	&__description
			font-family 'Open Sans', sans-serif
		
	
.container
	width 100%
	max-width 1440px
.header
	background background_header
	color gris
	display flex
	letter-spacing 0.05em
	padding 1em 8.43em	
	overflow hidden
	&__list
		list-style-type none
		text-align right
		&__item
			display inline-block
			padding 0 1em
			a
				color gris
				display block
				line-height 60px
				&.active
					border-bottom 3px solid naranja
				&:hover
					border-bottom 3px solid naranja
			&:first-child
				padding-left 0
			&:last-child
				padding-right 0
	&__logo
		float left
		width 20%
		a
			color gris
		&__image
			position relative
			margin 0
			figcaption
				font-size 1.5em
				position absolute
				left 3em
				bottom 0
				top 0.6em
	&__navigation
		float right
		width 80%
		&__dropdown
			display none
			.dropdown__select
				border  0 !important  
				-webkit-appearance  none  
				-moz-appearance  none 
				background  background_header_suave url('../img/select-arrow.png') no-repeat 90% center
				width  100% 
				text-indent  0.01px /* Removes default arrow from firefox*/
				text-overflow  ""  /*Removes default arrow from firefox*/ /*My custom style for fonts*/
				color  #FFF
				border-radius  15px
				padding  5px
				box-shadow  inset 0 0 5px rgba(000,000,000, 0.5)
				.active
					background naranja
					
.sidebar
	&__container
		align-items center
		background background_header_sidebar 
		display flex
		height 80vh
		padding 1em 2.5em
	&__center
		width 90%
		padding-left 3em
		p
			margin-top 3em
		&__title
		&__titleDescription
			font-family 'Raleway', sans-serif
			color gris
		&__title
			font-size 5em
			font-weight 600
		&__titleDescription
			font-weight 200
			padding .2em 0
	&__left
	&__right
		opacity .5
		width 5%
		a
			color background_header_sidebar_claro
			
.sidebar__triangle
	background orange
	display flex
	height 1.5em
	&__left
	&__right
		width 50%
	&__left
		background white
	&__right
		background background_header_sidebar
		position relative
		&:before
			content ""
			position absolute
			border-left 1em solid transparent
			border-right 1em solid transparent
			border-bottom 1.5em solid white
			border-top 1em solid transparent
			bottom 0
			left -1em
	
	