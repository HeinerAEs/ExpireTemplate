.container
	width 100%
	max-width 1440px
	

.header
	background background_header
	color white
	display flex
	letter-spacing 0.05em
	padding 1em 8.43em	
	overflow hidden
	&__list
		list-style-type none
		text-align right
		&__item
			display inline-block
			padding 0 1em
			a
				color white
				display block
				line-height 60px
				&.active
					border-bottom 3px solid naranja
				&:hover
					border-bottom 3px solid naranja
			&:first-child
				padding-left 0
			&:last-child
				padding-right 0
	&__logo
		float left
		width 20%
		a
			color white
		&__image
			position relative
			margin 0
			figcaption
				font-size 1.5em
				position absolute
				left 3em
				bottom 0
				top 0.6em
	&__navigation
		float right
		width 80%
		&__dropdown
			display none
			.dropdown__select
				border  0 !important  
				-webkit-appearance  none  
				-moz-appearance  none 
				background  background_header_suave url('../img/select-arrow.png') no-repeat 90% center
				width  100% 
				text-indent  0.01px /* Removes default arrow from firefox*/
				text-overflow  ""  /*Removes default arrow from firefox*/ /*My custom style for fonts*/
				color  #FFF
				border-radius  15px
				padding  5px
				box-shadow  inset 0 0 5px rgba(000,000,000, 0.5)
				.active
					background naranja


.latest-blog
	background white !important
	font-family 'Open Sans', sans-serif
	&__header
		color negro_claro !important
		margin-bottom 1rem
		p
			color negro_claro !important
	&__center
		display flex
		justify-content space-around
		padding 0 1.5rem
		p
			margin 0 !important
		&__item
			margin-right 1rem
			padding-bottom 3rem
			position relative
			text-align center
			hr
				margin .8rem
				opacity 0.5
				&:hover
					opacity 0.5
					
			&:last-child
				margin-right 0
			.btn
				position absolute
				left 1em
				bottom 0
			.description
			.info
			.h5
				padding 0 1.5em
			.description
				color negro_claro
				font-size .9rem
				line-height 1.5rem
				margin 1rem 0 !important
				text-align left
			.image
				background negro_claro
				height 240px
				margin 1em auto
				width 100%
			.info
				display flex
				font-size .8rem
				text-align left
				.author
				.comments
				.date
					.fa
						color naranja_claro
						margin-right .5rem !important
					
				.author
					width 40%
				.comments
					width 20%
				.date
					width 40%
			.h5
				color negro_claro
				font-weight 600
				&:hover
					color naranja
	&__container
		background white !important
		height auto !important
		&__center
			display flex


.latest-blog
.parallax
	background-attachment fixed
	background naranja_claro
	background-position: center center;
	background-repeat: no-repeat;
	background-size: cover;
	width 100%
	text-align center
	&__header
		color white
		.h1
			font-family 'Raleway', sans-serif
			margin 2rem 0
			position relative
			text-shadow:  0px 3px 3px rgba(0, 0, 0, 0.25);
			&:before
				border 1px solid white
				content ""
				margin-bottom -1rem
				position absolute
				left 45%
				bottom 0
				right 45%
				text-align center
				width 10%
		p
			color gris_claro
			font-family 'Open Sans', sans-serif
			font-size .8rem
	&__quotes
		font-family 'Open Sans', sans-serif
		margin 3em 0
		text-align left
		&__author
			&:before
				content " - "
		&__description
			.fa
				color white
				font-size 3rem
				opacity .5
		&__author
		&__description
			margin 1em
			color gris_claro
			font-size 1.5rem
		

.latest-blog
.sidebar
