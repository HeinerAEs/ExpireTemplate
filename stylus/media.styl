@media screen and (max-width: 480px)
	.header
		display block
		padding 0
		&__navigation__dropdown, 
		&__logo
			display block
			
		&__logo
			background red
			width 100%
		&__navigation
			display none
@media screen and (min-width: 481px) and (max-width: 950px)
	.header
		padding .5em 1em
		&__list
			&__item
				padding 0 .3em